<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>
        <div class="p-3 mb-2 bg-info text-dark">
          <h1>Station name</h1>
          </div>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= link_to station.name, station, class: "btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>



