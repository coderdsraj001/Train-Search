<p id="notice"><%= notice %></p>

<h1>All Trains</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= link_to train.name, train , class: "btn btn-outline-secondary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>



